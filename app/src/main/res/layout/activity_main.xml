<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.projects.ahmedbadr.portfolio.MainActivity"
    android:background="@android:color/white">

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Popular Movies"
            android:id="@+id/popular_movies"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:elevation="2dp"
            android:shadowRadius="2"
            android:background="@color/Main_color"/>

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Stock Hawk"
            android:id="@+id/stock_hawk"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:elevation="2dp"
            android:shadowRadius="2"
            android:background="@color/Main_color"/>

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Build it Bigger"
            android:id="@+id/build_it"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:elevation="2dp"
            android:shadowRadius="2"
            android:background="@color/Main_color"/>

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Make Your App Material"
            android:id="@+id/material"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:elevation="2dp"
            android:shadowRadius="2"
            android:background="@color/Main_color"/>

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Go Ubiquitous"
            android:id="@+id/ubiquitous"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:elevation="2dp"
            android:shadowRadius="2"
            android:background="@color/Main_color"/>

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Capstone "
            android:id="@+id/capstone"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:elevation="2dp"
            android:shadowRadius="2"
            android:background="@color/Main_color"/>

</LinearLayout>
