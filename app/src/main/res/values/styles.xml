<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Portfolio_orange</item>
        <item name="colorPrimaryDark">@color/Portfolio_dark_orange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuButtons" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:elevation">2dp</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@color/Main_color</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextViewStyle" parent="TextView.DefaultStyle">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/Portfolio_orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
